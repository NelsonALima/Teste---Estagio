#include <stdio.h>

int main(){
	int indice = 13, soma = 0, k = 0;
	
	for(k = 0; k < indice; k++){
		soma = soma + k;
		
	}
	
	printf("%d", soma);
	
	return 0;
}

//2)

#include <stdio.h>

int main() {
    int n, a = 0, b = 1, c;

    printf("Informe um numero: ");
    scanf("%d", &n);

    
    if (n == 0 || n == 1) {
        printf("O numero %d pertence a sequencia de Fibonacci.\n", n);
        return 0;
    }

    
    while (b < n) {
        c = a + b;  
        a = b;      
        b = c;      
    }

   
    if (b == n) {
        printf("O numero %d pertence a sequencia de Fibonacci.\n", n);
    } else {
        printf("O numero %d NAO pertence a sequencia de Fibonacci.\n", n);
    }

    return 0;
}


//3)

#include <stdio.h>

int main() {
    
    double faturamento[30] = {22174.1664, 24537.6698, 26139.6134, 0.0, 0.0, 26742.6612, 0.0, 
                              42889.2258, 46251.174, 11191.4722, 0.0, 0.0, 3847.4823, 373.7838, 
                              2659.7563, 48924.2448, 18419.2614, 0.0, 0.0, 35240.1826, 43829.1667, 
                              18235.6852, 4355.0662, 13327.1025, 0.0, 0.0, 25681.8318, 1718.1221, 
                              13220.495, 8414.61};

    double menor = -1, maior = -1, soma = 0.0, media = 0.0;
    int dias_com_faturamento = 0, dias_acima_da_media = 0;

    
    for (int i = 0; i < 30; i++) {
        if (faturamento[i] > 0) {
            if (menor == -1 || faturamento[i] < menor) {
                menor = faturamento[i];
            }
            if (maior == -1 || faturamento[i] > maior) {
                maior = faturamento[i];
            }
            soma += faturamento[i];
            dias_com_faturamento++;
        }
    }

    
    if (dias_com_faturamento > 0) {
        media = soma / dias_com_faturamento;
    }

    
    for (int i = 0; i < 30; i++) {
        if (faturamento[i] > media) {
            dias_acima_da_media++;
        }
    }

    
    printf("Menor valor de faturamento: %.2lf\n", menor);
    printf("Maior valor de faturamento: %.2lf\n", maior);
    printf("Numero de dias com faturamento acima da media mensal: %d\n", dias_acima_da_media);

    return 0;
}

//4)

#include <stdio.h>

int main() {
    
    double sp = 67836.43;
    double rj = 36678.66;
    double mg = 29229.88;
    double es = 27165.48;
    double outros = 19849.53;

    
    double total = sp + rj + mg + es + outros;

    
    printf("Percentual de faturamento por estado:\n");
    printf("SP: %.2f%%\n", (sp / total) * 100);
    printf("RJ: %.2f%%\n", (rj / total) * 100);
    printf("MG: %.2f%%\n", (mg / total) * 100);
    printf("ES: %.2f%%\n", (es / total) * 100);
    printf("Outros: %.2f%%\n", (outros / total) * 100);

    return 0;
}


//5)

#include <stdio.h>

int main() {
    char str[100]; 
    int i, j;
    char temp;

    printf("Digite uma palavra (sem espacos): ");
    scanf("%99s", str); 
    
    for (i = 0; str[i] != '\0'; i++);
    
    
    for (j = i - 1, i = 0; i < j; i++, j--) {
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }

    printf("Palavra invertida: %s\n", str);

    return 0;
}
